{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Git Ignore",
  "patterns": [
    {
      "include": "#comment"
    },
    {
      "include": "#backslash"
    },
    {
      "include": "#brackets"
    },
    {
      "include": "#special"
    },
    {
      "include": "#negate"
    },
    {
      "name": "support.type.property-name.path",
      "begin": "[\\w\\d\\-_@$~][\\w\\d\\-_@$~]*",
      "end": "\\n",
      "patterns": [
        {
          "include": "#backslash"
        },
        {
          "include": "#special"
        },
        {
          "include": "#brackets"
        }
      ]
    }
  ],
  "repository": {
    "comment": {
      "patterns": [
        {
          "name": "comment.line",
          "match": "^[\\t ]*#.*"
        }
      ]
    },
    "backslash": {
      "patterns": [
        {
          "match": "\\\\",
          "name": "constant.language.backslash"
        }
      ]
    },
    "negate": {
      "patterns": [
        {
          "match": "^[\\t ]*!",
          "name": "constant.language.negate"
        }
      ]
    },
    "special": {
      "patterns": [
        {
          "match": "\\/|\\.|\\*|\\?",
          "name": "keyword.control.escape.special"
        }
      ]
    },
    "brackets": {
      "begin": "\\[.*?",
      "end": "\\]",
      "name": "constant.character.escape.bracket",
      "patterns": [
        {
          "name": "constant.language.bracket.separator",
          "match": "-"
        },
        {
          "name": "string.regexp.bracket.value",
          "match": "[^-\\]]*"
        }
      ]
    }
  },
  "scopeName": "source.ignore"
}
